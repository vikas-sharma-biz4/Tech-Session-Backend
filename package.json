{
  "name": "auth-backend",
  "version": "1.0.0",
  "description": "Authentication backend API",
  "main": "dist/App.js",
  "scripts": {
    "build": "tsc",
    "start": "node dist/App.js",
    "dev": "ts-node-dev --respawn --transpile-only src/App.ts",
    "db:init": "ts-node src/scripts/init-db.ts",
    "db:sync": "ts-node src/scripts/sync-db.ts",
    "db:reset": "ts-node src/scripts/sync-db.ts --force",
    "db:migrate": "ts-node src/scripts/add-google-id-column.ts",
    "db:alter-password": "ts-node src/scripts/alter-password-column.ts",
    "db:add-role": "ts-node src/scripts/add-role-column.ts",
    "db:create-books": "ts-node --transpile-only src/scripts/create-books-table.ts",
    "db:seed-books": "ts-node --transpile-only src/scripts/seed-books.ts",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,json}\"",
    "lint": "eslint src --ext .ts,.tsx --max-warnings 0",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "type-check": "tsc --noEmit",
    "check:any": "ts-node --transpile-only scripts/check-any.ts",
    "check:quality": "ts-node --transpile-only scripts/check-code-quality.ts",
    "normalize:eol": "node scripts/normalize-line-endings.js",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run check:any && npm run check:quality",
    "prepare": "husky install || true"
  },
  "dependencies": {
    "@types/passport": "^1.0.17",
    "@types/passport-google-oauth20": "^2.0.17",
    "bcryptjs": "^2.4.3",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "multer": "^2.0.2",
    "nodemailer": "^6.9.7",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pg": "^8.16.3",
    "sequelize": "^6.37.7",
    "socket.io": "^4.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.10.6",
    "@types/nodemailer": "^6.4.14",
    "@types/pg": "^8.10.9",
    "@types/socket.io": "^3.0.1",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@typescript-eslint/eslint-plugin": "^7.18.0",
    "@typescript-eslint/parser": "^7.18.0",
    "autoprefixer": "^10.4.22",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^8.0.3",
    "lint-staged": "^16.2.6",
    "nodemon": "^3.0.2",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "tailwindcss": "^4.1.17",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.3.3"
  }
}
